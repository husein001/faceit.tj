# ===========================================
# FACEIT.TJ Production Configuration
# ===========================================

# Database
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/faceit_tj
REDIS_URL=redis://redis:6379

# API URLs
PORT=3001
API_URL=https://api.faceit.tj
FRONTEND_URL=https://faceit.tj

# Auth (ОБЯЗАТЕЛЬНО СМЕНИТЬ!)
# Сгенерировать: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32

# Steam API Key
# Получить: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=YOUR_STEAM_API_KEY

# Get5 Webhook Secret (придумай сам)
GET5_API_KEY=your-secure-webhook-secret

# Faceit API (опционально, для получения начального MMR)
# Получить: https://developers.faceit.com/
FACEIT_API_KEY=

# ===========================================
# DOCKER GAME SERVERS
# ===========================================

# Docker настройки
DOCKER_HOST=unix:///var/run/docker.sock
CS2_DOCKER_IMAGE=joedwards32/cs2
DOCKER_NETWORK=faceit_network

# GSLT Token для серверов
# Получить: https://steamcommunity.com/dev/managegameservers
# App ID: 730 (CS2)
GSLT_TOKEN=YOUR_GSLT_TOKEN

# Steam Web API Key для серверов (тот же что и STEAM_API_KEY)
CS2_STEAM_API_KEY=YOUR_STEAM_API_KEY

# ===========================================
# SERVER POOL CONFIGURATION
# ===========================================

# Порты для динамических серверов
SERVER_PORT_START=27015
SERVER_PORT_END=27030

# Автомасштабирование
AUTO_SCALING_ENABLED=true
MIN_SERVERS=2
MAX_SERVERS=10
TARGET_IDLE_SERVERS=2
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.3
SCALER_COOLDOWN=300000

# ===========================================
# CS2 SERVER SETTINGS
# ===========================================

# Настройки сервера
CS2_TICKRATE=128
CS2_MAXPLAYERS=10
CS2_STARTMAP=de_dust2
CS2_GAMETYPE=0
CS2_GAMEMODE=1

# Get5 плагин настройки (legacy)
GET5_WEBHOOK_URL=https://api.faceit.tj/api/webhook/get5

# MatchZy плагин настройки (рекомендуется)
MATCHZY_WEBHOOK_URL=https://api.faceit.tj/api/webhook/matchzy
MATCHZY_API_KEY=your-secure-webhook-secret

# ===========================================
# ADMIN
# ===========================================
ADMIN_LOGIN=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
